        <form action="[% Env("CGIHandle") %]" method="post" enctype="multipart/form-data" name="ClassItem" class="Validate PreventMultipleSubmits" id="ClassItem" enctype="multipart/form-data">
[% RenderBlockStart("StartSmall") %]
