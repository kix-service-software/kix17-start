<!-- start form -->
<div id="MainBox" class="MainBox AcceptBox ARIARoleMain">
    <div class="Content">
        <form action="[% Env("CGIHandle") %]" method="post">
            <input type="hidden" name="Action" value="[% Env("Action") %]"/>
            <input type="hidden" name="Accept" value="1"/>
            <h1 class="AcceptHeader">
                <span>[% Translate("Info") | html %]</span>
            </h1>
            <div class="Clear"></div>
            <div class="AcceptContent">
                <p>
                    [% Translate("To accept some news, a license or some changes.") | html %]
                </p>
            </div>
            <div class="Clear"></div>
            <div class="AcceptFooter">
                <button type="submit" class="Primary CallForAction">
                    <span>Yes, accepted.</span>
                </button>
            </div>
        </form>
    </div>
</div>
<!-- end form -->

