<script type="text/javascript">//<![CDATA[
$('#ToCustomer, #CcCustomer, #BccCustomer').on('change',function() {
    var Key = $(this).attr('name');
    if (Key == 'From' ) Key = '';
    if ( $(this).val() == '' ) {
        $('#'+Key+'CustomerLogin').val('');
        if (Key == '') {
            $('#SelectedCustomerUser').val('');
            $('#CustomerID').val('');
        }
    }
});
//]]></script>
[% END %]
