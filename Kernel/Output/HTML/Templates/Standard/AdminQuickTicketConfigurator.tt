<div class="MainBox ARIARoleMain LayoutFixedSidebar SidebarFirst">
    <h1>[% Translate("Ticket Template Configurator") | html %]</h1>

    <div class="SidebarColumn">
[% RenderBlockStart("ActionOverview") %]
        <div class="WidgetSimple">
            <div class="Header">
                <h2><span>[% Translate("Actions") | html %]</span></h2>
            </div>
            <div class="Content">
                <ul class="ActionList">
                    <li>
                        <a href="[% Env("Baselink") %]Action=[% Env("Action") %]" class="CallForAction Fullsize Center Back">
                            <span>
                                <i class="fa fa-caret-left"></i>
                                [% Translate("Go to overview") | html %]
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
[% RenderBlockEnd("ActionOverview") %]

[% RenderBlockStart("ActionAdd") %]
        <div class="WidgetSimple">
            <div class="Header">
                 <h2><span>[% Translate("Add ticket template") | html %]</span></h2>
            </div>
            <div class="Content">
                <form name="form" action="[% Env("CGIHandle") %]" method="get">
                    <input type="hidden" name="Action" value="[% Env("Action") %]"/>
                    <input type="hidden" name="Subaction" value="New" />
                    <button type="submit" name="New" value="[% Translate("Click here to add a ticket template") | html %]" class="CallForAction Fullsize Center">
                        <span><i class="fa fa-plus-square"></i> [% Translate("Add ticket template") | html %]</span>
                    </button>
                </form>
            </div>
        </div>
[% RenderBlockEnd("ActionAdd") %]
[% RenderBlockStart("Download") %]
        <div class="WidgetSimple">
            <div class="Header">
                 <h2><span>[% Translate("Download all ticket templates") | html %]</span></h2>
            </div>
            <div class="Content">
                <form name="form" action="[% Env("CGIHandle") %]" method="get">
                    <input type="hidden" name="Action" value="[% Env("Action") %]"/>
                    <input type="hidden" name="Subaction" value="Download" />
                    <button type="submit" name="Download" value="[% Translate("Download") | html %]" class="CallForAction Fullsize Center">
                        <span>
                            <i class="fa fa-download"></i> [% Data.DownloadType %] [% Translate("Download") %]
                        </span>
                    </button>
                </form>
            </div>
        </div>
[% RenderBlockEnd("Download") %]
[% RenderBlockStart("Upload") %]
        <div class="WidgetSimple">
            <div class="Header">
                 <h2><span>[% Translate("Upload ticket templates") | html %]</span></h2>
            </div>
            <div class="Content">
                <form name="UploadForm" action="[% Env("CGIHandle") %]" method="post" enctype="multipart/form-data" >
                    <input type="hidden" name="Action" value="[% Env("Action") %]"/>
                    <input type="hidden" name="Subaction" value="Upload" />
                    <input type="hidden" name="FormID" value="[% Data.FormID %]"/>
                    <input name="file_upload" type="file" size="25" class="Fixed W100pc" />
                    <button type="submit" name="Upload" value="[% Translate("Upload") | html %]" class="CallForAction Fullsize Center">
                        <span>
                            <i class="fa fa-upload"></i> [% Data.UploadType %] [% Translate("Upload") %]
                        </span>
                    </button>
                </form>
[% RenderBlockStart("UploadResult") %]
                <h2 class="SpacingTop"><span>[% Translate("Result of the upload") | html %]:</span></h2>
[% IF Data.Filename %]
                <fieldset class="Separated">
                    [% Data.Filename %]
                </fieldset>
[% END %]
                <fieldset class="TableLike FixedLabel">
[% IF Data.UploadMessage %]
                    <div class="MessageBox Center [% Data.UploadState %]">
                        <p>[% Translate(Data.UploadMessage) %]</p>
                    </div>
                    <div class="Clear"></div>
[% END %]
                    <label>[% Translate("entries uploaded") | html %]:</label>
                    <p class="Value">
                        [% Data.CountUploaded %]
                    </p>
                    <div class="Clear"></div>
                    <label>[% Translate("added") | html %]:</label>
                    <p class="Value">
                        [% Data.CountAdded %]
                    </p>
                    <div class="Clear"></div>
                    <label>[% Translate("updated") | html %]:</label>
                    <p class="Value">
                        [% Data.CountUpdated %]
                    </p>
                    <div class="Clear"></div>
                    <label>[% Translate("failed") | html %]:</label>
                    <p class="Value">
                        [% Data.CountFailed %]
                    </p>
                    <div class="Clear"></div>
                </fieldset>
[% RenderBlockEnd("UploadResult") %]
            </div>
        </div>
[% RenderBlockEnd("Upload") %]

    </div>
    <div class="ContentColumn">

[% RenderBlockStart("OverviewList") %]
        <div class="WidgetSimple">
            <div class="Header">
                 <h2><span>[% Translate("List") | html %]</span></h2>
            </div>
            <div class="Content">
                <table class="DataTable">
                    <thead>
                        <tr>
                            <th>[% Translate("Name") | html %]</th>
                            <th>[% Translate("Frontend") | html %]</th>
                            <th>[% Translate("Customer Portal Group") | html %]</th>
                            <th>[% Translate("Description") | html %]</th>
                            <th>[% Translate("Delete") | html %]</th>
                        </tr>
                    </thead>
                    <tbody>
[% RenderBlockStart("OverviewListRow") %]
                        <tr>
                            <td>
                                <a class="AsBlock" href="[% Env("Baselink") %]Action=[% Env("Action") %];Subaction=Change;ID=[% Data.ID | uri %]">[% Data.Name | html %]</a>
                            </td>
                            <td title="[% Translate("A: agent frontend; C: customer frontend") | html %]">[% Data.FrontendInfoStrg | html %]</td>
                            <td>[% Translate(Data.CustomerPortalGroup) | html %]</td>
                            <td title="[% Data.Description | html %]" >[% Data.Description | html %]</td>
                            <td class="Center">
                                <a class="TicketTemplateDelete" href="[% Env("Baselink") %]Action=[% Env("Action") %];Subaction=Delete;ID=[% Data.ID | html %]" title="[% Translate("Delete this template") | html %]">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>
                        </tr>
[% RenderBlockEnd("OverviewListRow") %]
[% RenderBlockStart("OverviewListEmpty") %]
                        <tr>
                            <td colspan="4">
                                [% Translate("No existing or matching quick tickets") | html %]
                            </td>
                        </tr>
[% RenderBlockEnd("OverviewListEmpty") %]
                    </tbody>
                </table>
            </div>
        </div>
[% WRAPPER JSOnDocumentComplete %]
<script type="text/javascript">//<![CDATA[
$('.TicketTemplateDelete').on('click', function (Event) {

    if (window.confirm([% Translate("Do you really want to delete this template?") | JSON %])) {
        window.location = $(this).attr('href');
    }

    // don't interfere with MasterAction
    Event.stopPropagation();
    Event.preventDefault();
    return false;
});
//]]></script>
[% END %]
[% RenderBlockEnd("OverviewList") %]

