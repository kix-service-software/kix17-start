                            <div class="Header"> <h2><span>[% Translate(Data.Label) | html %]</span></h2></div>
                            <div class="Content">
                            [% IF Data.Desc %]
                                <p class="FieldExplanation">
                                    [% Translate(Data.Desc) | html %]
                                </p>
                            [% END %]
